    "#14178 1차원 정원\n",
    "T = int(input())\n",
    "for t in range(1,T+1):\n",
    "    N, D = map(int,input().split())\n",
    "    D = 1 + D*2\n",
    "    if N % D == 0:\n",
    "        cnt = N // D\n",
    "    else:\n",
    "        cnt = N // D + 1\n",
    "    print(f\"#{t} {cnt}\")"
   ]
  }
